
.content {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.parent {
	overflow: hidden;
}
.sport-son {

	-webkit-animation: 10s rowup linear infinite normal;
	animation: 10s rowup linear infinite normal;
	position: relative;
	float: right;
	margin-right: -100px;
}
@-webkit-keyframes rowup {
0% {
		left: 0;
}
100% {
		left: -100%;
}
}
@keyframes rowup {
0% {
		left: 0;
}
100% {
		left: -100%;
}
}
.logo {
	height: 200rpx;
	width: 200rpx;
	margin-top: 200rpx;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 50rpx;
}
.text-area {
	display: flex;
	justify-content: center;
}
.title {
	font-size: 36rpx;
	color: #8f8f94;
}

